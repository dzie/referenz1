<% form_for :page, @page, 
            :url => @page.new_record? ? 
                    { :action => 'create'} : 
                    { :action => 'update', :id => @page} ,
            :html => {:id => 'edit_form'} do |f| %>
            
  <p>
    <label for="page_title">Titel:</label>
    <%= f.text_field 'title', :size => 20 %>
  </p>

  <p>
    <label for="page_body">Inhalt:</label>
    <%= f.text_area 'body' %>
  </p>
  <p>
    <label for="Submit"></label>
    <%= submit_tag @page.new_record? ? "Anlegen" : "Speichern" %>
    <%= link_to "Abbrechen", :action => :index %>
  </p>
<% end %>
